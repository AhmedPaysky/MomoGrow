<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="5dp"
    android:orientation="horizontal">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/product_image"
        android:layout_width="@dimen/_33sdp"
        android:layout_height="@dimen/_33sdp"
        android:src="@drawable/applepng"
        app:civ_border_color="@color/white"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/product_qnt"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_oval_grey_bold"
        android:paddingStart="@dimen/_4sdp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingEnd="@dimen/_4sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:text="x2"
        android:textColor="@color/white"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/_8sdp"
    android:gravity="center|start"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_name"
        android:fontFamily="@font/mtn_brighter_sans_medium"
        android:text="Green Apple "
        android:textColor="@color/et_color_black_100_opacity"
        android:textSize="@dimen/_12sdp"
        android:textStyle="normal" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/sku"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mtn_brighter_sans_regular"
        android:text="SKU 1234568 "
        android:textColor="@color/gray_light"
        android:textSize="@dimen/_10sdp" />
</LinearLayout>

<androidx.legacy.widget.Space
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tvCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:fontFamily="@font/mtn_brighter_sans_bold"
        android:text="UGX"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_4sdp"
        android:fontFamily="@font/mtn_brighter_sans_bold"
        android:gravity="center"
        android:text="150.00"
        android:id="@+id/tvAmount"
        android:textColor="#E81B1B1B"
        android:textSize="@dimen/_15sdp" />

</LinearLayout>

</LinearLayout>
